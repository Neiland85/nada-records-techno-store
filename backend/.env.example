# Application settings
APP_NAME="Music Store API"
APP_VERSION="1.0.0"
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/music_store
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# Storage (Backblaze B2)
BACKBLAZE_KEY_ID=your_b2_key_id
BACKBLAZE_APPLICATION_KEY=your_b2_application_key
B2_BUCKET_NAME=music-store-bucket
B2_BUCKET_ID=your_bucket_id

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_SUCCESS_URL=http://localhost:3000/payment/success
STRIPE_CANCEL_URL=http://localhost:3000/payment/cancel

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM_ADDRESS=noreply@musicstore.com

# Frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Security
SECRET_KEY=your-general-secret-key-for-encryption

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=INFO

# Feature flags
ENABLE_DISTRIBUTION=true
ENABLE_ANALYTICS=true
ENABLE_SOCIAL_LOGIN=false
MAINTENANCE_MODE=false
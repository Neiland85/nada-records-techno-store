# Environment variables for development
# Copy this file to .env.local and fill in your actual values

# Statsig Configuration
NEXT_PUBLIC_STATSIG_CLIENT_KEY=your_statsig_client_key_here
STATSIG_SERVER_API_KEY=your_statsig_server_api_key_here
EXPERIMENTATION_CONFIG_ITEM_KEY=your_experimentation_config_item_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/nada_records

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccountname;AccountKey=youraccountkey;EndpointSuffix=core.windows.net

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Backend URL
BACKEND_URL=http://localhost:8000
